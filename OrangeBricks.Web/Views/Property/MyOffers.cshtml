@model OrangeBricks.Web.Controllers.Offers.ViewModels.MyOffersOnPropertyViewModel
@using OrangeBricks.Web.Controllers.Property.Builders

@{
    ViewBag.Title = "My Offers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    username user = new username();
}

<h2>My Offers</h2>

<p>Here you can see the offers that you have on properties.</p>

@foreach (var Offers in Model.Offers)
{

    <hr />
    <div>
        <p><strong>Property: </strong>@Offers.StreetName</p>
        <p><strong>Property Type:</strong> @Offers.NumberOfBedrooms bedroom @Offers.PropertyType</p>
        <p><strong>Description:</strong> @Offers.description</p>
        <p><strong>Seller: </strong> @user.GetUserName(Offers.user)</p>
        <br />


        <p><strong>Offer Amount: </strong> £@Offers.Amount</p>
        <p><strong>Offer Date: </strong> @Offers.CreatedAt.ToLongTimeString() on @Offers.CreatedAt.ToShortDateString()</p>
        <p><strong>Offer Status:</strong> @Offers.Status</p>
    </div>
}
@if(Model.Offers.Count() == 0)
{
    <div class="alert alert-info" role="alert">
        You have not made any property offers yet!
    </div>
}
<div>
    @Html.ActionLink("Back To Property Search", "Index", "Property")
</div>
